<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="search" method="upgrade">
	<name>Search - LPD</name>
	<author>JoomlaWorks</author>
	<creationDate>December 9th, 2011</creationDate>
	<copyright>Copyright (c) 2006 - 2011 JoomlaWorks Ltd. All rights reserved.</copyright>
	<authorEmail>contact@joomlaworks.gr</authorEmail>
	<authorUrl>www.joomlaworks.gr</authorUrl>
	<version>2.5.4</version>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>LPD_THIS_PLUGIN_EXTENDS_THE_DEFAULT_JOOMLA_SEARCH_FUNCTIONALITY_TO_LPD_CONTENT</description>
	<files>
		<filename plugin="lpd">lpd.php</filename>
	</files>
	<params>
		<param name="search_limit" type="text" size="5" default="50" label="LPD_SEARCH_LIMIT" description="LPD_THE_NUMBER_OF_ITEMS_TO_RETURN_WHEN_PERFORMING_A_SEARCH"/>
		<param name="search_tags" type="radio" default="0" label="LPD_ENABLE_SEARCHING_IN_TAGS" description="LPD_SELECT_IF_YOU_WANT_TO_SEARCH_ITEMS_TAGS_NOTE_THAT_THIS_CAN_BE_VERY_SLOW_ON_LARGE_SITES">
			<option value="0">LPD_NO</option>
			<option value="1">LPD_YES</option>
		</param>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text" size="5" default="50" label="LPD_SEARCH_LIMIT" description="LPD_THE_NUMBER_OF_ITEMS_TO_RETURN_WHEN_PERFORMING_A_SEARCH"/>
				<field name="search_tags" type="radio" default="0" label="LPD_ENABLE_SEARCHING_IN_TAGS" description="LPD_SELECT_IF_YOU_WANT_TO_SEARCH_ITEMS_TAGS_NOTE_THAT_THIS_CAN_BE_VERY_SLOW_ON_LARGE_SITES">
					<option value="0">LPD_NO</option>
					<option value="1">LPD_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</install>
